= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      h2 = "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      ul
        - @page.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :permalink
    = f.text_field :permalink
  .field
    = f.label :content
    = f.text_area :content, class: "#{params[:direct_edit] ? '' : 'rich-textarea'}"
  .actions = f.submit 'Save'
